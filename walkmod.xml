<!DOCTYPE walkmod PUBLIC "-//WALKMOD//DTD"  "http://www.walkmod.com/dtd/walkmod-1.0.dtd" >
<walkmod>
	<plugins>
		<plugin groupId="org.walkmod" artifactId="walkmod-imports-cleaner-plugin"
			version="1.0" />
		<plugin groupId="org.walkmod" artifactId="walkmod-license-applier-plugin"
			version="1.0" />
		<plugin groupId="org.walkmod" artifactId="walkmod-setter-getter-plugin"
			version="1.0" />
	</plugins>

	<chain name="jpa-hibernate">
		<reader path="src/main/java">
			<include wildcard="org/walkmod/jug/model/*"></include>
		</reader>

		<transformation type="walkmod:commons:template"
			isMergeable="true">
			<param name="templates">["src/main/walkmod/templates/jpa-id.groovy"]</param>
		</transformation>
		<transformation type="walkmod:commons:template"
			isMergeable="true">
			<param name="templates">[
				"src/main/walkmod/templates/jpa-entities.groovy"]</param>
		</transformation>
		<transformation type="walkmod:commons:scripting">
			<param name="language">
				groovy
			</param>
			<param name="location">
				src/main/walkmod/scripts/fields.groovy
			</param>
		</transformation>

		<transformation type="walkmod:commons:setter-getter-gen"
			isMergeable="true">
		</transformation>
		<transformation type="walkmod:commons:template"
			isMergeable="true">
			<param name="templates">["src/main/walkmod/templates/hibernate-session.groovy"]</param>
		</transformation>
		<writer path="src/main/java" />
	</chain>

	<chain name="services">
		<reader path="src/main/java">
			<include wildcard="org/walkmod/jug/model/*"></include>
		</reader>
		<transformation type="walkmod:commons:template"
			isMergeable="true">
			<param name="templates">["src/main/walkmod/templates/service.groovy"]</param>
		</transformation>
	</chain>

	<chain name="rest">
		<reader path="src/main/java">
			<include wildcard="org/walkmod/jug/model/*"></include>
		</reader>
		<transformation type="walkmod:commons:template"
			isMergeable="true">
			<param name="templates">["src/main/walkmod/templates/rest.groovy"]</param>
		</transformation>
		<writer path="src/main/java" />
	</chain>


	<chain name="singletons">
		<reader path="src/main/java">
			<include wildcard="org/walkmod/jug/service/*"></include>
			<include wildcard="org/walkmod/jug/hibernate/*"></include>
		</reader>
		<transformation type="walkmod:commons:template"
			isMergeable="true">
			<param name="templates">
				[ "src/main/walkmod/templates/singleton.groovy"]
			</param>
		</transformation>
	</chain>

	<chain name="common">
		<transformation type="walkmod:commons:import-cleaner" />

		<transformation type="walkmod:commons:license-generator">
			<param name="licenseFile">src/main/license-header.txt</param>
		</transformation>
	</chain>
</walkmod>